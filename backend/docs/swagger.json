{
    "swagger": "2.0",
    "info": {
        "description": "AI 驅動的網紅案件管理系統 API\n提供 Google OAuth 認證、郵件管理、案件管理、AI 分析等功能",
        "title": "Influenter API",
        "termsOfService": "http://influenter.example.com/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://influenter.example.com/support",
            "email": "support@influenter.example.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/auth/google": {
            "post": {
                "description": "使用 Google credential 登入系統，如果使用者不存在會自動建立帳號",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "認證"
                ],
                "summary": "Google OAuth 登入",
                "parameters": [
                    {
                        "description": "Google 登入請求",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/internal_api.GoogleLoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "登入成功，返回使用者資訊和 JWT token",
                        "schema": {
                            "$ref": "#/definitions/github_com_designcomb_influenter-backend_internal_services.LoginResponse"
                        }
                    },
                    "400": {
                        "description": "請求格式錯誤",
                        "schema": {
                            "$ref": "#/definitions/internal_api.ErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Google token 無效或驗證失敗",
                        "schema": {
                            "$ref": "#/definitions/internal_api.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "伺服器內部錯誤",
                        "schema": {
                            "$ref": "#/definitions/internal_api.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "登出當前使用者，客戶端需清除本地儲存的 token",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "認證"
                ],
                "summary": "使用者登出",
                "responses": {
                    "200": {
                        "description": "登出成功訊息",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/auth/me": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "根據 JWT token 取得當前登入的使用者完整資訊",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "認證"
                ],
                "summary": "取得當前使用者資訊",
                "responses": {
                    "200": {
                        "description": "使用者資訊",
                        "schema": {
                            "$ref": "#/definitions/github_com_designcomb_influenter-backend_internal_models.User"
                        }
                    },
                    "401": {
                        "description": "未認證或 token 無效",
                        "schema": {
                            "$ref": "#/definitions/internal_api.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "使用者不存在",
                        "schema": {
                            "$ref": "#/definitions/internal_api.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "伺服器內部錯誤",
                        "schema": {
                            "$ref": "#/definitions/internal_api.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/ping": {
            "get": {
                "description": "測試 API 是否正常運作",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "系統"
                ],
                "summary": "Ping 測試",
                "responses": {
                    "200": {
                        "description": "Pong 回應",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "github_com_designcomb_influenter-backend_internal_models.User": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "google_id": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "profile_picture_url": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "github_com_designcomb_influenter-backend_internal_services.LoginResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/github_com_designcomb_influenter-backend_internal_models.User"
                }
            }
        },
        "internal_api.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "internal_api.GoogleLoginRequest": {
            "type": "object",
            "required": [
                "credential"
            ],
            "properties": {
                "clientId": {
                    "type": "string"
                },
                "credential": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}